# how to change colors temporarialy
window.color_sequence = "rgb(30,19,1),rgb(238,225,23),rgb(225,183,35),rgb(144,98,0),rgb(225,183,35),rgb(238,225,23),rgb(255,255,255),rgb(238,225,23),rgb(225,183,35),rgb(144,98,0),rgb(225,183,35),rgb(238,225,23),rgb(238,225,23),rgb(225,183,35),rgb(144,98,0),rgb(225,183,35),rgb(238,225,23), rgb(30,19,1)"
